<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }}">SymBlog</a>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a href="{{ path('blog_category') }}" class="nav-link">
                            Sa Catégorie
                        </a>

                    {% if not app.user %}
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('security_registration') }}" class="nav-link">
                                Inscription
                            </a>
                        </li>

                    <li class="nav-item">
                        <a href="{{ path('security_login') }}" class="nav-link">
                            Connexion
                        </a>
                    </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('blog_create', {'id': app.user.id }) }}">Créer un article</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('blog_user', {'id': app.user.id}) }}">Mes Articles</a>
                        </li>
                    <li class="nav-item">
                        <a href="{{ path('security_logout') }}" class="nav-link">
                            Déconnexion
                        </a>
                    </li>

                        <li class="nav-item">
                            <a href="{{ path('security_profil_edit') }}" class="nav-link">
                                Profil
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <br>
        {% block filter%}
        {% endblock %}

        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
