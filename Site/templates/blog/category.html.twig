{% extends 'base.html.twig' %}

{% form_theme formCategory 'bootstrap_4_layout.html.twig' %}

{% block filter %}
{% endblock %}

{% block body %}

    <h1>Créé sa catégorie !</h1>

    {{ form_start(formCategory) }}

    {{ form_row(formCategory.title, {'attr': {'placeholder': "Titre de la catégorie"}}) }}
    {{ form_row(formCategory.description, {'attr': {'placeholder': "Description . . ."}}) }}

    <button type="submit" class="btn btn-success">Ajouter catégorie</button>

    {{ form_end(formCategory) }}

{% endblock %}